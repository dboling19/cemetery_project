<!DOCTYPE html>
<html>
  <head>
      
      {% block stylesheets %}
        {{encore_entry_link_tags('app')}}
      {% endblock %}
      <script src="https://kit.fontawesome.com/0db354818b.js" crossorigin="anonymous"></script>

      <title>Cemetery - Owner</title>
  </head>

  <body>
    <div style="position:fixed;top:0;width:100%">
      {{ include("navbar.html.twig") }}
    </div>
    <div class="w3-container" style = "margin-top:40px">
    </div>
    {{ form(owner_form) }}
    <div class="w3-container">
      <table class="w3-table-all">
        <tr>
          <th>Cemetery</th>
          <th>Plot</th>
          <th>Notes</th>
          <th></th>
        </tr>
        <div style = "margin-top:35px">
            {% for row in plots %} {# simple loop to output rows #}
              <tr>
                <td>{{ row.cemetery }}</td>
                <td>{{ row.section ~ row.lot ~ row.space}}</td>
                <td>{{ row.notes }}</td>
                <td><div class="w3-center"><a href="{{ path('modify_plot',{ id: row.id }) }}" class="w3-button w3-ripple w3-border">Edit</a></div></td>
              </tr>
            {% endfor %}
      </table>
    </div>

  </body>

</html>

