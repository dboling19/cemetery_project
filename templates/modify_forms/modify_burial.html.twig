<!DOCTYPE html>
<html>
  <head>
      
      {% block stylesheets %}
        {{encore_entry_link_tags('app')}}
      {% endblock %}
      <script src="https://kit.fontawesome.com/0db354818b.js" crossorigin="anonymous"></script>

      <title>Cemetery - Plot</title>
  </head>

  <body>
    <div style="fixed-top">
      {{ include("navbar.html.twig") }}
    </div>
    <div class="container-fluid">
    {{ form(burial_form) }}
    </div>
    <div class="container-fluid">
      <table class="table table-striped table-bordered">
        <tr>
          <th>Cemetery</th>
          <th>Plot</th>
          <th>Notes</th>
          <th></th>
        </tr>
          <tr>
            <td>{{ burial.plot.cemetery }}</td>
            <td>{{ burial.plot.section ~ burial.plot.lot ~ burial.plot.space}}</td>
            <td>{{ burial.plot.notes }}</td>
            <td><a href="{{ path('modify_plot',{ id: burial.plot.id }) }}" class="btn btn-primary">Edit</a></td>
          </tr>
      </table>
    </div>

  </body>

</html>
