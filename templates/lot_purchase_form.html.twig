    let phone = document.createElement('phone');
    owner.setAttribute('id', 'lot_purchase_form_owner_' + owner_count);
    owner.setAttribute('name', 'lot_purchase_form[owner][]');
    owner.setAttribute('type', 'text');


    document.getElementById('addOwnerElement').appendChild(owner);
